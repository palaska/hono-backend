{
  "name": "hono-backend-template",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "dev:db": "turso dev --db-file dev.db/db",
    "push:db": "drizzle-kit push",
    "generate-auth-schema": "npx @better-auth/cli@latest generate --config ./src/lib/better-auth.config.ts --output ./src/db/auth.schema.ts -y",
    "deploy": "wrangler deploy --minify",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "tsc && tsc-alias"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-openapi": "^0.18.4",
    "@libsql/client": "^0.14.0",
    "@scalar/hono-api-reference": "^0.5.184",
    "better-auth": "^1.2.7",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.6.1",
    "hono": "^4.7.4",
    "hono-pino": "^0.7.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stoker": "1.4.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@types/node": "^22.13.10",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.22.0",
    "eslint-plugin-format": "^0.1.3",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "turso": "^0.1.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9",
    "wrangler": "^4.10.0"
  }
}
